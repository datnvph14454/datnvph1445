<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>List Photo</title>
</head>
<body class="container text-center">
<% include nav %>






<% if (typeof data != 'undefined')  {  %>

<H1 class="text-center"> Hình nền Điện Thoại Đẹp</H1>
<main role="main">


    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                <% for (var i = 0;i < data.length;i++) { %>
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">

                            <img src="<%= data[i].email %>" class="card-img-top" height="250" width="300" >
                            <div class="card-body">
                                <h4 class="card-text"> <%= data[i].firstName %>   </h4>
                                <p class="card-text"> <%= data[i].lastName %>    </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <form method="get" action="/xoa" style="margin-right: 5px">
                                            <input name="id" value="<%= data[i]._id %>" hidden>
                                            <button class="btn btn-danger" type="submit">Delete</button>
                                        </form>

                                        <!--form sua-->
                                        <form method="get" action="/sua">
                                            <input name="id" value="<%= data[i]._id %>" hidden>
                                            <button class="btn btn-outline-dark" type="submit">Update</button>
                                        </form>
                                        <h2>    </h2>
                                        <!--form sua-->
                                        <!--form method="get" action="/chitiet">
                                            <input name="id" value="" hidden>
                                            <button class="btn btn-primary" type="submit">Xem Chi Tiet</button>
                                        </form-->
                                        <h2>    </h2>
                                    </div>
                                    <small class="text-muted"> Time : <%= data[i].password %> </small>
                                </div>
                            </div>
                        </div>

                    </div>
                <% } %>

                    <% } %>
            </div>
        </div>
    </div>

</main>



